<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:numpad="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.protoype.osindex.currencyexchange.activities.ConversionActivity"
    tools:showIn="@layout/activity_conversion"
    android:id="@+id/constraint_layout_currency_conversion"
    android:background="@color/colorPrimary">

    <TextView
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="From"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:text="To"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp" />

    <EditText
        android:id="@+id/editText_from_amount"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/from_amount_symbol_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutCurrencyConversion"
        app:layout_constraintHorizontal_bias="0.811" />

    <Button
        android:onClick="convertCurrency"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/button_convert_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Convert"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_from_amount" />

    <TextView
        android:id="@+id/editText_to_amount"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:ems="12"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_convert_currency"
        app:layout_constraintLeft_toRightOf="@+id/to_amount_symbol_textview"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.877" />

    <FrameLayout
        android:id="@+id/frameLayoutCurrencyConversion"
        android:layout_width="220dp"
        android:layout_height="68dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp">


        <ImageView
            android:id="@+id/textiew_real_currency_conversion_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="top|left"
            android:scaleType="fitStart"
            android:src="@drawable/afn"
            android:text="Nigerian Niara"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Spinner
            android:id="@+id/cryptocurrency_spinner"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </FrameLayout>

    <cat.xojan.numpad.NumPadView
        android:id="@+id/to_amount_symbol_textview"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="109dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_amount_symbol_textview"
        app:layout_constraintVertical_bias="1.0"
        numpad:custom_button1_text="DEL"
        numpad:textBold="false"
        numpad:textColor="@color/colorBlack" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/from_amount_symbol_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="32dp" />

</android.support.constraint.ConstraintLayout>
