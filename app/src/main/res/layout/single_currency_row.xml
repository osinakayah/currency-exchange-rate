<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/single_currency_image"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/btc"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.059" />

    <TextView
        android:textColor="@color/colorTextBlack"
        android:textStyle="bold"
        android:id="@+id/single_currency_short_name"
        android:layout_width="94dp"
        android:layout_height="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="8dp"
        android:text="NGN"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintLeft_toRightOf="@+id/single_currency_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:textColor="@color/colorTextBlack"
        android:id="@+id/single_currency_fullname"
        android:layout_width="140dp"
        android:layout_height="17dp"
        android:text="Nigeria Naira"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/single_currency_short_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/single_currency_short_name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="38dp"
        android:text="$2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>